datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}

model Client {
  id        Int      @id @default(autoincrement())
  title     String
  contact   String
  phone     String
  email     String
  type      String
  sector    String
  adress    String
  createdAt DateTime @default(now())
}

model Product {
  id        Int      @id @default(autoincrement())
  title     String
  unit      String
  unitPrice Float
  createdAt DateTime @default(now())
}

model Seller {
  id        Int      @id @default(autoincrement())
  name      String
  phone     String
  email     String
  createdAt DateTime @default(now())
}
